---
interface Props {
	title: string;
	subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="flex">
	<div class="education__time">
		<span class="mt-1 block h-4 w-4 rounded-full bg-accent"></span>
		<span class="education__line block h-full w-[2px] translate-x-[7px] bg-accent"></span>
	</div>
	<div class="experience__data bd-grid px-5 pb-2">
		<h3 class="mb-1 text-lg font-bold md:font-semibold">{title}</h3>
		<span class="text-sm font-thin italic">{subtitle}</span>
		<p class="my-2 text-lg">
			<slot />
		</p>
	</div>
</div>
